{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true
  }
}

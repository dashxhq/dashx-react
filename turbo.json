{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_DASHX_BASE_URI",
        "NEXT_PUBLIC_DASHX_REALTIME_URI",
        "NEXT_PUBLIC_DASHX_PUBLIC_KEY",
        "NEXT_PUBLIC_DASHX_TARGET_ENVIRONMENT",
        "NEXT_PUBLIC_DASHX_TARGET_PRODUCT"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
